<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gui.PersonChatController">
   <children>
      <HBox layoutY="307.0" prefHeight="141.0" prefWidth="600.0">
         <children>
            <TextArea fx:id="textArea" prefHeight="200.0" prefWidth="485.0" />
            <VBox prefHeight="200.0" prefWidth="115.0">
               <children>
                  <Button fx:id="sendButton" mnemonicParsing="false" onMouseClicked="#sendMessage" prefHeight="23.0" prefWidth="120.0" text="发送">
                     <font>
                        <Font name="Microsoft YaHei" size="18.0" />
                     </font>
                  </Button>
                  <Button fx:id="clearButton" mnemonicParsing="false" onMouseClicked="#clearTextArea" prefHeight="23.0" prefWidth="120.0" text="清空">
                     <font>
                        <Font name="Microsoft YaHei" size="18.0" />
                     </font>
                  </Button>
                  <Button fx:id="sendfileButton" mnemonicParsing="false" onMouseClicked="#sendFile" prefHeight="23.0" prefWidth="115.0" text="传文件">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
                  <Button fx:id="backButton" mnemonicParsing="false" onMouseClicked="#backToMain" prefHeight="23.0" prefWidth="120.0" text="返回">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox prefHeight="307.0" prefWidth="600.0">
         <children>
            <VBox fx:id="dialogBox" prefHeight="307.0" prefWidth="585.0" />
            <ScrollBar orientation="VERTICAL" prefHeight="307.0" prefWidth="0.0" />
         </children>
      </HBox>
   </children>
</AnchorPane>
